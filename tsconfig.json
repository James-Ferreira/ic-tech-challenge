{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 16",

  "compilerOptions": {
    /* Basic Options */
    "target": "es2022",
    "module": "es2022",
    "lib": [
      "esnext",
      "dom"
    ],

    "types": ["node"],
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "./src",

    /* Strict Type-Checking Options */
    "strict": true,
    "skipLibCheck": true,
    "noImplicitOverride": true,

    /* Module Resolution Options */
    "moduleResolution": "node",
    "esModuleInterop": true,

    /* Source Map Options */
    "inlineSources": true,

  },
  "ts-node": {
    "esm": true,
  },
  "include": ["src/**/*"]
}
